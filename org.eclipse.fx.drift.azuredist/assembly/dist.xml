<?xml version="1.0" encoding="UTF-8"?>
<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
      http://maven.apache.org/xsd/assembly-1.1.2.xsd"
>
  <id>dist</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <outputDirectory>/include</outputDirectory>
      <directory>../native/DriftFX/include/</directory>
    </fileSet>
    <fileSet>
      <outputDirectory>/libs</outputDirectory>
      <directory>../artifacts/driftfx_natives/</directory>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <outputDirectory>/</outputDirectory>
      <source>${project.build.directory}/sources.zip</source>
    </file>
    <file>
      <outputDirectory>/</outputDirectory>
      <source>../org.eclipse.fx.drift.updatesite/target/org.eclipse.fx.drift.updatesite-${project.version}.zip</source>
    </file>
  </files>

</assembly>